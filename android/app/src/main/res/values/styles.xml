<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InterestrTheme" parent="AppTheme.NoActionBar">
        <item name="android:buttonStyle">@style/InterestrTheme.ButtonStyle</item>
        <item name="android:textViewStyle">@style/InterestrTheme.Text</item>
    </style>

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>

    <style name="InterestrTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="InterestrTheme.AlertDialog">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>


    <style name="InterestrTheme.ButtonStyleDark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg_dark</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>



    <style name="InterestrTheme.Text">
    </style>

    <style name="InterestrTheme.Text.Emphasis" parent="InterestrTheme.Text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InterestrTheme.Text.Small" parent="InterestrTheme.Text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

</resources>
